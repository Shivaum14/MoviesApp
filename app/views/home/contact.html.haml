%h1= t('.title')
%p= t('.contact_us')

= form_tag request_contact_path, method: 'post' do
    %div{:class => "Cform"}
        = label_tag :name, t('.name')
        = text_field_tag :name, '', title: t('.enter_name'), size: 50, placeholder: "Firstname Lastname"
        
        = label_tag :email, t('.email')
        = email_field_tag :email, '', title: t('.enter_email'), placeholder: "example@movies.com"
        
        = label_tag :telephone, t('.telephone')
        = telephone_field_tag :telephone, '', title: t('.enter_telephone'), placeholder: "xxxxxxxxxxx"
        
        = label_tag :message, t('.message')
        = text_field_tag :message, '', title: t('.enter_message'), size: 100
    
    = submit_tag t('.submit')